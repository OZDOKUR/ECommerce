@model ECommerce.Models.AuthenticationModels.UserSignInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- page-title -->
<div class="tf-page-title style-2">
    <div class="container-full">
        <div class="heading text-center">Giriş Yap</div>
    </div>
</div>
<!-- /page-title -->

    <div id="wrapper">
        <section class="flat-spacing-10">
            <div class="container">
                <div class="tf-grid-layout lg-col-2 tf-login-wrap">
                    <div class="tf-login-form">
                        <div id="login">
                            <h5 class="mb_36">Giriş Yap</h5>
                            <div>
                                <form method="post" class="account-form">
                                <div class="tf-field style-1 mb_30">
                                    <input asp-for="@Model.Mail" class="tf-field-input tf-input"  type="email" id="property4" name="Mail">
                                    <label class="tf-field-label fw-4 text_black-2" for="property4">E-Posta *</label>
                                </div>
                                <div class="tf-field style-1 mb_30">
                                    <input asp-for="@Model.Password" class="tf-field-input tf-input"  type="password" id="property4" name="Password">
                                    <label class="tf-field-label fw-4 text_black-2" for="property4">Şifre *</label>
                                </div>
                                    <div class="">
                                        <button type="submit" class="tf-btn w-100 radius-3 btn-fill animate-hover-btn justify-content-center">Giriş Yap</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tf-login-content">
                        <h5 class="mb_36">Burada Yeniyim</h5>
                    <p class="mb_20">Erken Satış erişimi ve kişiye özel yeni gelenler, trendler ve promosyonlar için kaydolun. Devre dışı bırakmak için e-postalarımızda abonelikten çık'ı tıklayın.</p>
                    <a href="~/Authentication/Register" class="tf-btn btn-line">Kaydol<i class="icon icon-arrow1-top-left"></i></a>
                    </div>
                </div>
            </div>
        </section>
    </div>


