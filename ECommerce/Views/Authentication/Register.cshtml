@model ECommerce.Models.AuthenticationModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="wrapper">

        <!-- page-title -->
        <div class="tf-page-title style-2">
            <div class="container-full">
                <div class="heading text-center">Kaydol</div>
            </div>
        </div>
        <!-- /page-title -->

        <section class="flat-spacing-10">
            <div class="container">
                <div class="form-register-wrap">
                    <div class="flat-title align-items-start gap-0 mb_30 px-0">
                        <h5 class="mb_18">Kaydol</h5>
                    <p class="text_black-2">Erken Satış erişimi ve kişiye özel yeni gelenler, trendler ve promosyonlar için kaydolun. Devre dışı bırakmak için e-postalarımızda abonelikten çık'ı tıklayın</p>
                    </div>
                    <div>
                        <form method="post" asp-action="Register">
                            <div class="tf-field style-1 mb_15">
                            <input asp-validation-for="FirstName" class="tf-field-input tf-input" placeholder=" " type="text" id="property1" name="FirstName">
                                <label class="tf-field-label fw-4 text_black-2" for="property1">Adınız</label>
                            </div>
                            <div class="tf-field style-1 mb_15">
                            <input asp-validation-for="LastName" class="tf-field-input tf-input" placeholder=" " type="text" id="property2" name="LastName">
                                <label class="tf-field-label fw-4 text_black-2" for="property2">Soyad</label>
                            </div>
                            <div class="tf-field style-1 mb_15">
                            <input asp-validation-for="Email" class="tf-field-input tf-input" placeholder=" " type="email" id="property3" name="Email">
                                <label class="tf-field-label fw-4 text_black-2" for="property3">E-Posta</label>
                            </div>
                        <div class="tf-field style-1 mb_15">
                            <input asp-validation-for="PhoneNumber" class="tf-field-input tf-input" placeholder=" " type="text" id="property3" name="PhoneNumber">
                            <label class="tf-field-label fw-4 text_black-2" for="property3">Telefon Numarası</label>
                        </div>
                            <div class="tf-field style-1 mb_30">
                            <input asp-validation-for="Password" class="tf-field-input tf-input" placeholder=" " type="password" id="property4" name="Password">
                                <label class="tf-field-label fw-4 text_black-2" for="property4">Şifre *</label>
                            </div>
                            <div class="mb_20">
                                <button type="submit" class="tf-btn w-100 radius-3 btn-fill animate-hover-btn justify-content-center">Kaydol</button>
                            </div>
                            <div class="text-center">
                            <a href="~/Authentication/Login" class="tf-btn btn-line">Hesabın var mı? Giriş Yap<i class="icon icon-arrow1-top-left"></i></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

